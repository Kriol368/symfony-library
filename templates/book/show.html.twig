{# templates/book/index.html.twig #}
{% for book in books %}
    <div>
        <h2>{{ book.title }}</h2>
        <a href="{{ path('book_show', { id: book.id }) }}">Ver detalles</a>
        <a href="{{ path('book_edit', { id: book.id }) }}">Editar</a>

        <form action="{{ path('book_delete', { id: book.id }) }}" method="post" style="display: inline;" class="delete-form">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
            <input type="hidden" name="_method" value="DELETE"> {# Campo oculto para simular DELETE #}
            <button type="submit">Eliminar</button>
        </form>
    </div>
{% endfor %}
